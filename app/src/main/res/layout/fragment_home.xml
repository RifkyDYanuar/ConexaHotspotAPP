<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">
 <androidx.core.widget.NestedScrollView
     android:id="@+id/nested"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:scrollbars="vertical">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <ImageView
             android:layout_width="match_parent"
             android:layout_height="300dp"
             android:background="@drawable/vector_9"/>
         <ImageView
             android:layout_width="match_parent"
             android:layout_height="280dp"
             android:background="@drawable/vector_3"/>
         <ImageView
             android:layout_width="match_parent"
             android:layout_height="280dp"
             android:scaleType="centerCrop"
             android:background="@drawable/network"/>
         <ImageView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="-15dp"
             android:layout_marginTop="80dp"
             android:background="@drawable/vector_5" />
         <ImageView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="-5dp"
             android:layout_marginTop="72dp"
             android:background="@drawable/vector_6" />
         <ImageView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="-13dp"
             android:layout_marginTop="60dp"
             android:background="@drawable/vector_7" />
         <ImageView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="-5dp"
             android:layout_marginTop="40dp"
             android:background="@drawable/vector_8" />
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">
             <androidx.cardview.widget.CardView
                 android:layout_width="match_parent"
                 android:layout_height="120dp"
                 app:cardCornerRadius="15dp"
                 app:cardElevation="8dp"
                 android:layout_marginHorizontal="20dp"
                 android:layout_marginTop="200dp">
                 <LinearLayout
                     android:layout_marginVertical="20dp"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="vertical">
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:orientation="horizontal">

                         <LinearLayout
                             android:layout_weight="1"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="vertical">
                             <androidx.cardview.widget.CardView
                                 android:id="@+id/tagihan"
                                 android:layout_marginHorizontal="18dp"
                                 android:layout_width="55dp"
                                 android:layout_height="55dp"
                                 app:cardCornerRadius="15dp"
                                 android:backgroundTint="@color/bluedark">
                                 <ImageView
                                     android:layout_gravity="center"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:src="@drawable/file_1"/>
                             </androidx.cardview.widget.CardView>
                             <TextView
                                 android:layout_marginTop="5dp"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:text="Tagihan"
                                 android:textSize="10sp"
                                 android:textAlignment="center"
                                 android:fontFamily="@font/poppins_bold"/>

                         </LinearLayout>
                         <LinearLayout
                             android:layout_weight="1"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="vertical">
                             <androidx.cardview.widget.CardView
                                 android:id="@+id/coverage"
                                 android:layout_marginHorizontal="18dp"
                                 android:layout_width="55dp"
                                 android:layout_height="55dp"
                                 app:cardCornerRadius="15dp"
                                 android:backgroundTint="@color/bluedark">
                                 <ImageView
                                     android:layout_gravity="center"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:src="@drawable/hotspot_1"/>
                             </androidx.cardview.widget.CardView>
                             <TextView
                                 android:layout_marginTop="5dp"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:text="Coverage"
                                 android:textAlignment="center"
                                 android:textSize="10sp"
                                 android:fontFamily="@font/poppins_bold"/>

                         </LinearLayout>
                         <LinearLayout
                             android:layout_weight="1"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="vertical">
                             <androidx.cardview.widget.CardView
                                 android:id="@+id/paket"
                                 android:layout_marginHorizontal="18dp"
                                 android:layout_width="55dp"
                                 android:layout_height="55dp"
                                 app:cardCornerRadius="15dp"
                                 android:backgroundTint="@color/bluedark">
                                 <ImageView
                                     android:layout_gravity="center"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:src="@drawable/cloud_network_1"/>
                             </androidx.cardview.widget.CardView>
                             <TextView
                                 android:layout_marginTop="5dp"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:text="Paket"
                                 android:textSize="10sp"
                                 android:textAlignment="center"
                                 android:fontFamily="@font/poppins_bold"/>

                         </LinearLayout>
                         <LinearLayout
                             android:layout_weight="1"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="vertical">
                             <androidx.cardview.widget.CardView
                                 android:id="@+id/upgrade"
                                 android:layout_marginHorizontal="18dp"
                                 android:layout_width="55dp"
                                 android:layout_height="55dp"
                                 app:cardCornerRadius="15dp"
                                 android:backgroundTint="@color/bluedark">
                                 <ImageView
                                     android:layout_gravity="center"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:src="@drawable/icons8_speed_50_1"/>
                             </androidx.cardview.widget.CardView>
                             <TextView
                                 android:layout_marginTop="5dp"
                                 android:textSize="10sp"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:text="Upgrade"
                                 android:textAlignment="center"
                                 android:fontFamily="@font/poppins_bold"/>
                         </LinearLayout>
                     </LinearLayout>

                 </LinearLayout>
             </androidx.cardview.widget.CardView>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Pilihan Paket"
                 android:layout_gravity="center_vertical"
                 android:fontFamily="@font/poppins_bold"
                 android:layout_marginStart="30dp"
                 android:layout_marginTop="20dp"/>
             <View
                 android:layout_width="wrap_content"
                 android:layout_height="1dp"
                 android:layout_gravity="center"
                 android:background="@color/dark_grey"
                 android:layout_marginHorizontal="30dp"
                 android:layout_marginTop="6dp"/>

                 <androidx.recyclerview.widget.RecyclerView
                     android:layout_marginVertical="10dp"
                     android:id="@+id/recycleview"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:clipToPadding="false"
                     android:backgroundTint="@null"
                     />
             <ProgressBar
                 android:id="@+id/progress_bar"
                 style="?android:attr/progressBarStyleLarge"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:visibility="gone" />
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_gravity="center"
                 android:layout_marginVertical="30dp">
                 <TextView
                     android:layout_width="match_parent"
                     android:textAlignment="textEnd"
                     android:layout_height="wrap_content"
                     android:text="@string/terhubung"
                     android:fontFamily="@font/poppins_bold"
                     android:layout_marginHorizontal="30dp" />

                 <View
                     android:layout_width="wrap_content"
                     android:layout_height="1dp"
                     android:layout_gravity="center"
                     android:background="@color/dark_grey"
                     android:layout_marginHorizontal="30dp" />

             </LinearLayout>
             <androidx.recyclerview.widget.RecyclerView
                 android:layout_marginVertical="10dp"
                 android:id="@+id/grid_view_paket"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:clipToPadding="false"
                 android:backgroundTint="@null"
                 />
             <TextView
                 android:layout_width="match_parent"
                 android:textAlignment="textStart"
                 android:layout_height="wrap_content"
                 android:text="@string/conexa_promosi"
                 android:fontFamily="@font/poppins_bold"
                 android:layout_marginHorizontal="30dp" />

             <View
                 android:layout_width="wrap_content"
                 android:layout_height="1dp"
                 android:layout_gravity="center"
                 android:background="@color/dark_grey"
                 android:layout_marginHorizontal="30dp" />
             
             <FrameLayout
                 android:layout_width="wrap_content"
                 android:layout_marginVertical="20dp"
                 android:layout_marginHorizontal="20dp"
                 android:layout_height="wrap_content"
                 >
                 <ImageView
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:src="@drawable/group_33"/>
                 <ImageView
                     android:layout_marginTop="10dp"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:src="@drawable/image_13"/>
             </FrameLayout>
             <FrameLayout
                 android:layout_width="wrap_content"
                 android:layout_marginHorizontal="20dp"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="20dp">
                 <ImageView
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:src="@drawable/group_34"/>
             </FrameLayout>
         </LinearLayout>
     </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/network"
        app:layout_scrollFlags="scroll|enterAlways"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar"
            app:elevation="0dp">
            <LinearLayout
                android:paddingVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/profil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_new" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/show_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text=""
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/show_internet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="CNX06013"
                        android:textColor="@color/orange" />
                </LinearLayout>
                <ImageView
                    android:layout_weight="2"
                    android:id="@+id/notif_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/baseline_circle_notifications_24" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>