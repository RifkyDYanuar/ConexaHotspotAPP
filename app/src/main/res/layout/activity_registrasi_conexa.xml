<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrasiConexa">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:background="@drawable/vector_4"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:background="@drawable/vector_3"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/conexa"
        android:layout_gravity="center_horizontal"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="150dp"
        app:cardElevation="100dp"
        app:cardCornerRadius="15dp">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            app:startIconDrawable="@drawable/user"
            android:hint="Nama"
            app:endIconMode="clear_text">
            <com.google.android.material.textfield.TextInputEditText
                android:drawableStart="@drawable/user"
                android:id="@+id/nama"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="30dp"
            app:startIconDrawable="@drawable/mail"
            android:hint="Email"
            app:endIconMode="clear_text">
            <com.google.android.material.textfield.TextInputEditText
                android:drawableStart="@drawable/mail"
                android:id="@+id/email"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="210dp"
            android:layout_marginEnd="30dp"
            app:startIconDrawable="@drawable/user"
            android:hint="Username"
            app:endIconMode="clear_text">
            <com.google.android.material.textfield.TextInputEditText
                android:drawableStart="@drawable/user"
                android:id="@+id/username"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="290dp"
            android:layout_marginEnd="30dp"
            android:hint="Password"
            app:endIconMode="password_toggle"
            app:startIconDrawable="@drawable/padlock">
            <com.google.android.material.textfield.TextInputEditText
                android:drawableStart="@drawable/padlock"
                android:id="@+id/password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="120dp"
                android:layout_marginStart="25dp"
                android:text="@string/sk"
                android:fontFamily="@font/poppins"/>
            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:fontFamily="@font/poppins_bold"
                android:layout_gravity="bottom"
                android:background="@drawable/button_custom"
                android:layout_marginBottom="50dp"
                android:layout_marginHorizontal="50dp"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/AppVersi"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="32dp" />

    </LinearLayout>


</FrameLayout>