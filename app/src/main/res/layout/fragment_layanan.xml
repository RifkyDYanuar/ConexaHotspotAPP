<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LayananFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/vector_9"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/vector_3"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:background="@drawable/conexacare"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="40dp">
        <!--diisi background vector-->
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="220dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ada Kendala Dengan Internet ?"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/los_internet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="8dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/btn_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:src="@drawable/outline_call_64"/>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:text="Kecepatan Internet Lambat"
                                    android:fontFamily="@font/poppins_medium"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:text="Periksa gadget lalu lakukan tes kecepatan"
                                    android:textSize="10sp"/>

                            </LinearLayout>
                            <ImageView
                                android:layout_weight="2"
                                android:id="@+id/edit_profile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="26dp"
                                android:src="@drawable/baseline_arrow_forward_ios_24"
                                android:background="@color/white"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dark_grey"
                            android:layout_marginHorizontal="26dp"/>

                        <TextView
                            android:id="@+id/dekripsi_inet_lambat"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/internet_los"
                            android:fontFamily="@font/poppins"
                            android:justificationMode="inter_word"
                            android:lineSpacingExtra="4dp"
                            android:textAlignment="viewStart"
                            android:visibility="gone"/>


                        <Button
                            android:id="@+id/speed_test"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginVertical="20dp"
                            android:background="@drawable/button_custom"
                            android:text="@string/speed"
                            android:fontFamily="@font/poppins"
                            android:visibility="gone"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/not_koneksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="8dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/btn_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="16dp"
                                android:src="@drawable/outline_call_64"/>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:text="Tidak Ada Koneksi"
                                    android:fontFamily="@font/poppins_medium"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:text="Periksa nama jaringan (SSID) di perangkat"
                                    android:textSize="10dp"/>

                            </LinearLayout>
                            <ImageView
                                android:layout_weight="2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="26dp"
                                android:src="@drawable/baseline_arrow_forward_ios_24"
                                android:background="@color/white"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dark_grey"
                            android:layout_marginHorizontal="26dp"/>

                        <TextView
                            android:id="@+id/dekrips_not_koneksi"
                            android:layout_marginStart="30dp"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/not_koneksi"
                            android:fontFamily="@font/poppins"
                            android:justificationMode="inter_word"
                            android:lineSpacingExtra="4dp"
                            android:textAlignment="viewStart"
                            android:visibility="gone"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/lampu_merah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="8dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/btn_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="16dp"
                                android:src="@drawable/outline_call_64"/>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:text="Lampu Loss Menyala Merah"
                                    android:fontFamily="@font/poppins_medium"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:text="Periksa kabel dan perangkat jaringan ONT"
                                    android:textSize="10sp"/>

                            </LinearLayout>
                            <ImageView
                                android:layout_weight="2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="26dp"
                                android:src="@drawable/baseline_arrow_forward_ios_24"
                                android:background="@color/white"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dark_grey"
                            android:layout_marginHorizontal="26dp"/>

                        <TextView
                            android:id="@+id/deskripsi_lampu_los"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/lampu_merah"
                            android:fontFamily="@font/poppins"
                            android:justificationMode="inter_word"
                            android:lineSpacingExtra="4dp"
                            android:textAlignment="viewStart"
                            android:visibility="gone"

                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hubungi Kami"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="16dp"
                    app:cardCornerRadius="20dp">

                    <!--card Email-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="16dp"
                                android:src="@drawable/outline_email_64"/>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="-7dp"
                                    android:text="Email"
                                    android:fontFamily="@font/poppins"
                                    android:textSize="10dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="conexamediaacces@gmail.com"
                                    />
                            </LinearLayout>
                            <ImageView
                                android:layout_weight="2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="18dp"
                                android:src="@drawable/baseline_arrow_forward_ios_24"
                                android:background="@color/white"/>
                        </LinearLayout>

                        <!--garis horizontal-->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dark_grey"
                            android:layout_marginVertical="1dp"
                            android:layout_marginEnd="26dp"
                            android:layout_marginStart="26dp"/>

                        <!--Card Lokasi-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="16dp"
                                android:src="@drawable/outline_location_on_64"/>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="-8dp"
                                    android:text="Alamat Kantor"
                                    android:fontFamily="@font/poppins"
                                    android:textSize="10dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Temukan Lokasi di Maps"
                                    />
                            </LinearLayout>
                            <ImageView
                                android:layout_weight="2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="18dp"
                                android:src="@drawable/baseline_arrow_forward_ios_24"
                                android:background="@color/white"/>
                        </LinearLayout>
                        <!--garis horizontal-->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dark_grey"
                            android:layout_marginVertical="1dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="25dp"/>

                        <!--Card Tiket-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="16dp"
                                android:src="@drawable/outline_call_64"/>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="-7dp"
                                    android:text="Tiket Gangguan"
                                    android:fontFamily="@font/poppins"
                                    android:textSize="10sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Hubungi Teknisi Conexa"
                                    />
                            </LinearLayout>
                            <ImageView
                                android:layout_weight="2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="18dp"
                                android:src="@drawable/baseline_arrow_forward_ios_24"
                                android:background="@color/white"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

    </FrameLayout>
</FrameLayout>