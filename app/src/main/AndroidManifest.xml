<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_cnx"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ConexaHotspot"
        tools:targetApi="31">
        <activity
            android:name=".ConexaNotification"
            android:exported="true" />
        <activity
            android:name=".ConexaPaket"
            android:exported="true"
            android:theme="@style/Theme.SlideAnimWindow"/>

        <activity
            android:name=".DetailPaket"
            android:exported="true" />
        <activity
            android:name=".RegisterInternet"
            android:exported="true" />
        <activity
            android:name=".AccountInfo"
            android:exported="true" />
        <activity
            android:name=".ContactPerson"
            android:exported="true" />
        <activity
            android:name=".ChangePassword"
            android:exported="true" />
        <activity
            android:name=".UpdateAdress"
            android:exported="true" />
        <activity
            android:name=".UpdateProfil"
            android:exported="true" />
        <activity
            android:name=".AboutUsActivity"
            android:exported="true" />
        <activity
            android:name=".RegistrasiConexa"
            android:exported="true" />
        <activity
            android:name=".SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="androidx.appcompat.app.AppCompatDelegate.defaultNightMode"
            android:value="no" />
    </application>

</manifest>